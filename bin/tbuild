#!/bin/bash

SCRIPTPATH="$( cd "$(dirname "$0")" ; pwd -P )"
PROJECTPATH="$( cd $SCRIPTPATH && cd ..; pwd -P )"

cd $PROJECTPATH && docker-compose \
    -f docker-compose.yml \
    -f compose/nginx.yml \
    -f compose/mariadb.yml \
    -f compose/mssql.yml \
    -f compose/mysql.yml \
    -f compose/pgsql.yml \
    -f compose/php.yml \
    -f compose/selenium.yml \
    -f compose/mutagen.yml \
    -f compose/build.yml \
    build "$@"